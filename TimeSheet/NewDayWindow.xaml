<Window x:Class="TimeSheet.NewDayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new day" Height="105" Width="300">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <DatePicker Grid.Row="0" Name="NewDateDatePicker" Margin="0,0,0,5"></DatePicker>
        <Button Grid.Row="1" Click="ButtonBase_OnClick">Add</Button>
    </Grid>
</Window>
