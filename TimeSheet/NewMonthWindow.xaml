<Window x:Class="TimeSheet.NewMonthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new month" Height="130" Width="310" ResizeMode="NoResize">
    <Grid Margin="5,5,5,0" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">New month name</Label>
        <TextBox Grid.Row="1" Name="NewMonthNameTextBox" Margin="0,5,0,5"></TextBox>
        <Button Grid.Row="2" Name="ConfirmAddButton" Click="ConfirmAddButton_OnClick">Add</Button>
    </Grid>
</Window>
